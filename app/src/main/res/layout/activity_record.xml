<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/record_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4CBF5C">
        <ImageView
            android:id="@+id/record_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/back_img"/>
        <TextView
            android:id="@+id/record_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:text="数据记录"
            android:textColor="#fff"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/record_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:textSize="15dp"
        android:background="@drawable/text_selector"
        android:textColor="#000000"
        android:text="日期："/>
    <TextView
        android:id="@+id/record_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/text_selector"
        android:padding="8dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="时间："/>
    <LinearLayout
        android:id="@+id/record_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_selector"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="8dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="设备名称："/>
        <EditText
            android:id="@+id/record_nameEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="15dp"
            android:hint="(以供用户自己区分设备)"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/record_gao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_selector"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="高压："/>
        <EditText
            android:id="@+id/record_gaoEdit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="15dp"
            android:hint="30-200"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="mmHg" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/record_di"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_selector"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="高压："/>
        <EditText
            android:id="@+id/record_diEdit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="15dp"
            android:hint="30-200"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="mmHg" />
    </LinearLayout>
    <Button
        android:id="@+id/record_Btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="上传"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#4CBF5c"/>
</LinearLayout>