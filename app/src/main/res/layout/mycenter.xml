<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FFF0">
    <RelativeLayout
        android:id="@+id/my_beijing"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#aaaa">
        <Button
            android:id="@+id/my_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="点击登录"
            />
        <ImageView
            android:id="@+id/my_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/persional_normal"
            />
        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_image"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="您还没有登录哦~"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/my_jiahao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_beijing"
        android:background="@drawable/text_selector"
        android:text="我的加号"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_jiahao"/>
    <TextView
        android:id="@+id/my_shoucang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_jiahao"
        android:drawableRight="@drawable/arrow_right"
        android:background="@drawable/text_selector"
        android:text="我的收藏"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_collect"/>
    <TextView
        android:id="@+id/my_ziliao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_shoucang"
        android:drawableRight="@drawable/arrow_right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_selector"
        android:text="个人资料"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_info"/>
    <TextView
        android:id="@+id/my_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_ziliao"
        android:drawableRight="@drawable/arrow_right"
        android:background="@drawable/text_selector"
        android:text="消息"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_message"/>
    <TextView
        android:id="@+id/my_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_message"
        android:drawableRight="@drawable/arrow_right"
        android:background="@drawable/text_selector"
        android:text="设置"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_setting"/>

</RelativeLayout>