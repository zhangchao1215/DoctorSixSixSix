<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/my_beijing"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/my_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/persional_normal"/>
        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_image"
            android:gravity="center"
            android:text="ZZ王奔"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/my_jiahao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_beijing"
        android:background="#ffffff"
        android:text="我的加号"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_jiahao"/>
    <TextView
        android:id="@+id/my_shoucang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_jiahao"
        android:background="#ffffff"
        android:text="我的收藏"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_collect"/>
    <TextView
        android:id="@+id/my_ziliao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_shoucang"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff"
        android:text="个人资料"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_info"/>
    <TextView
        android:id="@+id/my_message"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_ziliao"
        android:background="#ffffff"
        android:text="消息"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_message"/>
    <TextView
        android:id="@+id/my_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/my_message"
        android:background="#ffffff"
        android:text="设置"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:drawableLeft="@mipmap/img_setting"/>

</RelativeLayout>