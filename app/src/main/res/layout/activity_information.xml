<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/information_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4CBF5C">
        <ImageView
            android:id="@+id/information_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/back_img"/>
        <TextView
            android:id="@+id/information_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:text="血压资讯"
            android:textColor="#fff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/information_common"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/information_03"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:text="高血压常识"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/information_recipes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/information_05"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:text="高血压食谱"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/information_prevention"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/information_09"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:text="高血压预防"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/information_treatment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/information_10"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:text="高血压治疗"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/inspect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/information_14"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:text="高血压检查"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>