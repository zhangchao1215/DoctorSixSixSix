<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/account_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4CBF5C">
        <ImageView
            android:id="@+id/account_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/back_img"/>
        <TextView
            android:id="@+id/account_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:text="账户"
            android:textColor="#fff"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/account_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/account_title"
        android:drawableRight="@drawable/arrow_right"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:text="手机号码"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/account_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/account_phone"
        android:drawableRight="@drawable/arrow_right"
        android:paddingRight="10dp"
        android:background="#ffffff"
        android:text="密码"
        android:paddingLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/account_backlogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/account_pwd"
        android:paddingRight="10dp"
        android:background="#FF0000"
        android:text="退出登录"
        android:gravity="center"
        android:textSize="20dp"
        />
</RelativeLayout>