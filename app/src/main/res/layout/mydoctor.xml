<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/yishengzaixian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#B1B1">
        <TextView
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生在线"
            android:textSize="20dp"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/person"
        android:padding="10dp"
        android:layout_below="@+id/yishengzaixian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="#F9F9F9"
        android:text="全国有70046位血压专家为您在线治疗"/>
    <RelativeLayout
        android:id="@+id/province"
        android:layout_below="@id/person"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:padding="5dp"
            android:text="省份"/>
        <ImageView
            android:id="@+id/mymap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/location"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/doctor_name"
        android:layout_below="@id/province"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="医生职称"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hospital"
        android:layout_below="@id/doctor_name"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="医院等级"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/sousuo"
        android:layout_below="@id/hospital"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="关键字/专家姓名/医院名称/疾病"/>

    <LinearLayout
        android:id="@+id/chaxun"
        android:layout_below="@+id/sousuo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费加号"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#B1B1"
            android:text="查询专家"/>
    </LinearLayout>

</RelativeLayout>